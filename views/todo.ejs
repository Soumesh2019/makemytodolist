<%- include("partials/header"); %>

<title><%= name %> | My Personal ToDo</title>
  </head>
  <body>

    <div class="todoList">

      <div class="greetings">
        <h3><%= day %>, <%= name %></h3>
      </div>

      <div class="date">
        <h4>Today's Date <%= date %></h4>
      </div>

      <div class="list">
        <form action="/submit" method="post" class="submit">
          <input type="text" name="item" id="item" placeholder="Add Item" />
          <input type="hidden" name="userId" value="<%= userId %>" />
          <button type="submit" class="add">ADD</button>
        </form>
        <div class="listitems">
          <ul>
            <% itemsArray.forEach((item, index) => { %>
              <li onclick="onSubmit(index, itemsArray);"><%= item %> Completed</li>
            <% }) %>
          </ul>
        </div>      
      </div>
      <form action="/logout" method="post" class="logout">
        <button type="submit">Logout</button>
      </form> 
     </div>

     <script>

       function onSubmit(index, array) { 
         alert(index, array);
        }

    
     </script>

    <%- include("partials/footer"); %>