<%- include("partials/header"); %>

<title><%= name %> | My Personal ToDo</title>
  </head>
  <body>

    <div class="todoList col-9">

      <div class="greetings">
        <h3><%= day %>, <%= name %></h3>
      </div>

      <div class="date">
        <h4>Today's Date <%= date %></h4>
      </div>

      <div class="list">
        <form action="/submit" method="post" class="submit" autocomplete="off">
          <input type="text" name="item" id="item" placeholder="Add Item" />
          <input type="hidden" name="userId" value="<%= userId %>" />
          <button type="submit" class="add">ADD</button>
        </form>
        <div class="listitems">
          <ul>
            <% itemsArray.forEach((item, index) => { %>
              <form action="/delete" method="post">
                <input type="hidden" name="userID" value="<%= userId %>" />
                <input type="hidden" name="index" value="<%= item %>" />
                <li><input type="checkbox" name="checkbox" id="checkbox" onchange="this.form.submit()" class="checkbox" class="checkbox"/><%= item %></li>
              </form>
              
            <% }) %>
          </ul>
        </div>      
      </div>
      <form action="/logout" method="post" class="logout">
        <button type="submit">Logout</button>
      </form> 
     </div>

    <%- include("partials/footer"); %>